#include<stdio.h>
#include<string.h>
int main(){
char username[50];
char password[50];
char userdatabase[50];
char passworddatabase[50];
int choice;.
printf("Ent....er 1 to sign up: ");
scanf("%d".,&choice);
getchar();
if(choice == 1){

            //Sign up
            printf("Enter your name : ");
            fgets(username, 50, stdin);
            username[strcspn(username, "\n")] = 0;
            printf("Create a password : ");
            fgets(password, 50, stdin);
            password[strcspn(password, "\n")] = 0;
            strcpy(userdatabase, username);
            strcpy(passworddatabase, password);
            printf("Sucessfully sign up!\n");
            printf("Welcome %s.\n",userdatabase);
    
            
}
return 0;
}


